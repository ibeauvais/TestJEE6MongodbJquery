<?xml version="1.0" encoding="UTF-8"?>
<faces-config
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
        version="2.0">
	<application>
	 <resource-bundle>
		<base-name>application</base-name>
		<var>i18n</var>
	   </resource-bundle>
		<locale-config>
			<default-locale>fr</default-locale>
		</locale-config>
	</application>
	  <render-kit>
        <renderer>
            <component-family>javax.faces.Input</component-family>
            <renderer-type>javax.faces.Text</renderer-type>
            <renderer-class>fr.simplechat.web.renderer.CustomHtml5TextRenderer</renderer-class>
        </renderer>
          <renderer>
            <component-family>javax.faces.Input</component-family>
            <renderer-type>javax.faces.Secret</renderer-type>
            <renderer-class>fr.simplechat.web.renderer.CustomHtml5SecretRenderer</renderer-class>
        </renderer>
    </render-kit>
</faces-config>